<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Fullscreen Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Circular Scan Button -->
    <Button
        android:id="@+id/captureButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/circlebutton"
        android:strokeColor="#1C2840"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- Mode Switch Button -->
    <Button
        android:id="@+id/switchmodebutton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="155dp"
        android:background="@drawable/circlebutton"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="130dp"
        android:text="Text Scanner"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchmodebutton"
        tools:ignore="HardcodedText" />

    <!-- Notepad Button -->
    <Button
        android:id="@+id/notepadButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="155dp"
        android:background="@drawable/circlebutton"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/notepadLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="130dp"
        android:text="Notepad"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notepadButton"
        tools:ignore="HardcodedText" />

    <!-- Bottom Sheet Styled Popup -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottomsheetbg"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="16dp"
        android:layout_margin="16dp"
        android:maxHeight="400dp">

        <TextView
            android:id="@+id/ingredientLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients List"
            android:textStyle="bold"
            android:textColor="#1C2840"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:weightSum="2">

            <Button
                android:id="@+id/addAllTextBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Add all text"
                android:background="@drawable/pillbutton"
                android:textColor="#1C2840"
                android:textAllCaps="false"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/manualInputBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Manual Input"
                android:background="@drawable/pillbutton"
                android:textColor="#1C2840"
                android:textAllCaps="false"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/extractedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="4dp" />

        <Button
            android:id="@+id/saveToAllergyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save to Allergy List"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:drawableStart="@drawable/addlogo"
            android:drawablePadding="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>